%section.content-header
  %h1
    Tasks
%section.content
  .row
    .col-md-3
      .box.box-solid
        .box-header.with-border
          %h4.box-title
            Draggable Events
        .box-body
          #external-events
            .checkbox
              %label{for: 'drop-remove'}
                %input{type: 'checkbox', id: 'drop-remove'}
                remove after drop
