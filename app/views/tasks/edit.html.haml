.page-header
  - if policy(Task).index?
    = link_to tasks_path, class: 'btn btn-default' do
      %span.glyphicon.glyphicon-list-alt
      Back
  - if policy(Task).show?
    = link_to task_path(@task), class: 'btn btn-primary' do
      %span.glyphicon.glyphicon-info-sign
      Show

= render 'form', task: @task
