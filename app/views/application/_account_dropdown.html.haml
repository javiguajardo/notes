- if user_signed_in?
  %li.dropdown.user.user-menu
    / Menu Toggle Button
    %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
      / The user image in the navbar
      =image_tag 'user_image', class: 'user-image'
      / hidden-xs hides the username on small devices so only the image appears.
      %span.hidden-xs
        = current_user.username
    %ul.dropdown-menu
      / The user image in the menu
      %li.user-header
        =image_tag 'user_image', class: 'img-circle'
        %p
          = current_user.username
      / Menu Footer
      %li.user-footer
        .pull-left
          =link_to 'Profile', '#', class: 'btn btn-default btn-flat'
        .pull-right
          =link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'btn btn-default btn-flat'
