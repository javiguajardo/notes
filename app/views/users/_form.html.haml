.page-header
.box
  .box-header
    %h3.box-title Edit Password
  .box-body.pad
    = form_for user, url: {action: 'update_password'}, layout: :horizontal do |f|
      = f.text_field :username
      = f.password_field :current_password, autocomplete: 'off'
      = f.password_field :password, autocomplete: 'off'
      = f.password_field :password_confirmation
      = f.submit class: 'btn btn-primary'
    .pull-right
      = link_to registration_path(user), class: 'btn btn-danger', title: 'Delete User',
        data: { confirm: "Are you sure you want to deactivate your account #{user.username}?" }, method: :delete do
        %span.glyphicon.glyphicon-remove
        Deactivate Account