.page-header
  = link_to new_note_path, class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Note

.box
  .box-header.with-border
    %h3.box-title
      Listing Notes
  .box-body.table-responsive.no-padding
    %table.table.table-striped.table-bordered.table-hover
      %thead
        %tr
          %th Title
          %th Content
          %th{colspan: '3', style: 'text-align: center'} Actions

      %tbody
        - @notes.each do |note|
          %tr
            %td= note.title
            %td= note.content
            %td= link_to 'Show', note
            %td= link_to 'Edit', edit_note_path(note)
            %td= link_to 'Destroy', note, :data => { confirm: 'Are you sure?' }, :method => :delete
